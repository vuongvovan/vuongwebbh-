
@model QLBanHangDemo.ViewModels.LoginViewModel

@{ ViewData["Title"] = "Login";
   Layout = "_AccountLayout"; }



            <div class="login-right">
                <div class="login-right-wrap">
                    <h1>Login</h1>
                    <p class="account-subtitle">Access to our dashboard</p>

                    <!-- Form -->
                    <form asp-action="Login">
                        <div class="form-group">
                            <input class="form-control" asp-for="Email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input class="form-control" asp-for="Password" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Login</button>
                        </div>
                    </form>
                    <!-- /Form -->

                    <div class="text-center forgotpass"><a href="forgot-password.html">Forgot Password?</a></div>
                    <div class="login-or">
                        <span class="or-line"></span>
                        <span class="span-or">or</span>
                    </div>

                    <!-- Social Login -->
                    <div class="social-login">
                        <span>Login with</span>
                        <a href="/sigin-facebook" class="facebook"><i class="fa fa-facebook"></i></a>

                        <a href="Index" class="google"><i class="fa fa-google"></i></a>
                    </div>
                    <!-- /Social Login -->

                    <div class="text-center dont-have">Don’t have an account? <a asp-action="Register">Register</a></div>
                </div>
            </div>
>
